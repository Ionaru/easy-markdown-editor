{
    "compilerOptions": {
        "baseUrl": "",
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "lib": [
            "esnext",
            "es2018",
            "es2017",
            "es2016",
            "es2015",
            "dom"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "sourceMap": true,
        "target": "es5",
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "exclude": [
        "./node_modules",
        "./src/**/*.spec.ts"
    ],
    "include": [
        "./src/**/*.ts"
    ]
}
