{
    "defaultSeverity": "error",
    "extends": [
        "tslint:latest"
    ],
    "rules": {
        "max-line-length": [
            true,
            140
        ],
        "no-unused-expression": [
            true,
            "allow-new"
        ],
        "quotemark": [
            true,
            "single"
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "always",
                "singleline": "never"
            }
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore"
        ],
        "no-submodule-imports": [
            true,
            "codemirror/addon"
        ]
    }
}
